<maui:MauiWinUIApplication
    x:Class="Essensgeldkasse.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:Essensgeldkasse.WinUI">
    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="LightBlue" />
            <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="LightBlue" />
            <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="LightBlue" />
            <SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush" Color="LightBlue" />
        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
